<h1>All Users</h1>

<h4><%= link_to "Search", search_path %></h4>

<table>
  <thead>
    <tr>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user %> (<%= link_to 'X', user, method: :delete, data: { confirm: 'Are you sure?' } %>)</td>
      </tr>
      <tr>
        <td>
          <%= render "availability", user: user %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
